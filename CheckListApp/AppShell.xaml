<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CheckListApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CheckListApp"
    xmlns:view="clr-namespace:CheckListApp.View"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
    Title="Tasks"
    ContentTemplate="{DataTemplate view:UserTaskPage}"
    Route="UserTaskPage" />

    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate view:LoginPage}"
    Route="LoginPage" />

    <ShellContent
    Title="Task Entry"
    ContentTemplate="{DataTemplate view:TaskEntryPage}"
    Route="TaskEntryPage" />

    <ShellContent
    Title="Registration"
    ContentTemplate="{DataTemplate view:RegistrationPage}"
    Route="RegistrationPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="main" />
    <ShellContent
        Title="Splash"
        ContentTemplate="{DataTemplate view:CustomSplashPage}"
        Route="SplashPage" />
</Shell>